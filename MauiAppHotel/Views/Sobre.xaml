<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray100}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16" VerticalOptions="CenterAndExpand">

            <Frame CornerRadius="12" Padding="12" HasShadow="True" BackgroundColor="{StaticResource BrownLight}">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="6">
                    <Label Text="MauiAppHotel" 
                           FontFamily="Kalam" 
                           FontSize="32" 
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource Beige}"/>
                    <Label Text="Cálculo de Diária" 
                           FontSize="14" 
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="12" BackgroundColor="{StaticResource BrownLight}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Desenvolvedor" FontAttributes="Bold" />
                    <Label Text="Nome: Tiago A. Silva" />
                    <Label Text="E-mail: tiago@tiago.blog.br" />
 
                    <BoxView HeightRequest="1" Opacity="0.12" />

                    <Label Text="Sobre o Projeto" FontAttributes="Bold" />
                    <Label Text="Aplicativo demonstrativo em .NET MAUI para cálculo de hospedagem. Implementa seleção de quarto, cálculo de estadia e valor total." />

                    <BoxView HeightRequest="1" Opacity="0.12" />

                    <Label Text="Ano de desenvolvimento" FontAttributes="Bold" />
                    <Label Text="2025" />

                    <BoxView HeightRequest="1" Opacity="0.12" />

                    <Label Text="Observações" FontAttributes="Bold" />
                    <Label Text="Layout personalizado com tipografia Kalam e cores do tema. Página Sobre adicionada para créditos e informações." />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Voltar" Clicked="Voltar_Clicked" HorizontalOptions="Center" WidthRequest="160"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
