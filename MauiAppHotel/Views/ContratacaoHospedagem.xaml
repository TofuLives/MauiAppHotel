<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource BrownDark}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
        Padding="10"
        Spacing="10">

        <Label Text="Cálculo da Diária"
               FontFamily="Kalam"
               FontSize="50"
               />

        <Frame Padding="10" BackgroundColor="{StaticResource BrownLight}">
            <VerticalStackLayout 
            BackgroundColor="{StaticResource BrownLight}">
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*"
                      BackgroundColor="{StaticResource Beige}">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"
                           TextColor="{StaticResource OnLightText}"
                           BackgroundColor="{StaticResource Beige}"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource OnLightText}"
                           BackgroundColor="{StaticResource Beige}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             BackgroundColor="{StaticResource BrownDark}"/>

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"
                           TextColor="{StaticResource OnLightText}"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource OnLightText}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             BackgroundColor="{StaticResource BrownDark}"/>
                </Grid>

                <Frame Padding="10" Margin="10" BackgroundColor="{StaticResource BrownDark}">
                    <VerticalStackLayout
                        BackgroundColor="{StaticResource BrownDark}">

                        <Label Text="Escolha sua Suíte"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Beige}"/>

                        <Picker x:Name="pck_quarto"
                                Title="Selecione sua Acomodação"
                                ItemDisplayBinding="{Binding Descricao}"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Padding="10"
                       Margin="10" BackgroundColor="{StaticResource BrownDark}">
                    <VerticalStackLayout Spacing="10"
                        BackgroundColor="{StaticResource BrownDark}">

                        <Label Text="Período da Estadia"
                               TextTransform="Uppercase"
                               FontSize="Subtitle"
                               TextColor="{StaticResource Beige}"/>

                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        DateSelected="dtpck_checkin_DateSelected"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avançar" Clicked="Button_Clicked"/>

            </VerticalStackLayout>
        </Frame>

        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,10,0,0">
            <Button Text="Sobre" Clicked="Sobre_Clicked" WidthRequest="120"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>