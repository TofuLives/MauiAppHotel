<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- TODO: Definir o resto da paleta -->

    <Color x:Key="Primary">#419CA6</Color>
    <Color x:Key="AccentGreen">#9CA653</Color>
    <Color x:Key="Beige">#F2E7C4</Color>
    <Color x:Key="BrownLight">#8C7A64</Color>
    <Color x:Key="BrownDark">#593A28</Color>

    <Color x:Key="OnDarkText">#F2E7C4</Color>
    <Color x:Key="OnLightText">#593A28</Color>

    <!-- cores p/ compatibilidade -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}" />
    <SolidColorBrush x:Key="BeigeBrush" Color="{StaticResource Beige}" />
    <SolidColorBrush x:Key="BrownLightBrush" Color="{StaticResource BrownLight}" />
    <SolidColorBrush x:Key="BrownDarkBrush" Color="{StaticResource BrownDark}" />

    <SolidColorBrush x:Key="OnDarkTextBrush" Color="{StaticResource OnDarkText}" />
    <SolidColorBrush x:Key="OnLightTextBrush" Color="{StaticResource OnLightText}" />

</ResourceDictionary>
